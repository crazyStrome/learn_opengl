ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../bin/Debug/mesh
  TARGET = $(TARGETDIR)/libmesh.a
  OBJDIR = ../bin-int/Debug/mesh
  DEFINES += -DDEBUG
  INCLUDES += -I../vendor/glad/include -I../shader/include -Iinclude -I../vendor/assimp/include
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -g
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/Debug/glad/libglad.a ../bin/Debug/shader/libshader.a
  LDDEPS += ../bin/Debug/glad/libglad.a ../bin/Debug/shader/libshader.a
  ALL_LDFLAGS += $(LDFLAGS)
  LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
	@:

endif

ifeq ($(config),release)
  RESCOMP = windres
  TARGETDIR = ../bin/Release/mesh
  TARGET = $(TARGETDIR)/libmesh.a
  OBJDIR = ../bin-int/Release/mesh
  DEFINES += -DNDEBUG
  INCLUDES += -I../vendor/glad/include -I../shader/include -Iinclude -I../vendor/assimp/include
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -O2
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -O2
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/Release/glad/libglad.a ../bin/Release/shader/libshader.a
  LDDEPS += ../bin/Release/glad/libglad.a ../bin/Release/shader/libshader.a
  ALL_LDFLAGS += $(LDFLAGS) -s
  LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
  define PREBUILDCMDS
  endef
